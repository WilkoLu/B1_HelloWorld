<Window x:Class="Profilrechner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Profilrechner"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>


        <TreeView Margin="5" Name="test">
            <TreeViewItem Header="Menu" IsExpanded="True">
                <TreeViewItem Header="Vollprofile" IsExpanded="True" >
                    <TreeViewItem x:Name="tvi_Rechteckprofil" Header="Rechteckprofil" MouseLeftButtonUp="tvi_Rechteckprofil_MouseLeftButtonUp"  />
                </TreeViewItem>
                <TreeViewItem Header="Rohrprofile" IsExpanded="True">
                    <TreeViewItem x:Name="Rohrprofil" Header="Rohrprofil"  />
                    <TreeViewItem x:Name="Rechteckrohr" Header="Rechteckrohr"  />
                </TreeViewItem>
                <TreeViewItem Header="Sonstige" />
            </TreeViewItem>
            <Button Content="Button" Name="Button" VerticalAlignment="Top" Width="75" Click="btn_closeTab"/>
        </TreeView>

        <TabControl Grid.Column="1" Name="TabControl" Margin="0,5,5,5">
            
        </TabControl>

        <Button Content="X" Name="btn_CloseTab"  Click="btn_CloseTab_Click" 
                Margin="0,37,10,0" Height="14" Width="14" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Column="1"
                Background="Red" FontSize="7" FontWeight="Bold"/>

    </Grid>
</Window>
