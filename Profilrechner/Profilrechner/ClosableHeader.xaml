<UserControl x:Class="Profilrechner.ClosableHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Profilrechner"
             mc:Ignorable="d" 
             >
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Label Name="lbl_TabTitle" VerticalAlignment="Center"
                   FontSize="10" FontFamily="Courier" 
                >
            </Label>

            <Button Name="btn_close" Width="23" Height="23" 
                     ToolTip="Close" VerticalAlignment="center" HorizontalAlignment="Center" 
                     Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Background="transparent">

                <Image x:Name="close_button_png" Height="17" Source="Bilder\close_button2.png" Stretch="Fill" Width="17" VerticalAlignment="center" HorizontalAlignment="Center" Visibility="Visible"  />
            </Button>

        </StackPanel>

    </Grid>
</UserControl>
